{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        ".vercel/**"
      ]
    },
    "@maily-to/web#build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "VITE_GA_TRACKING_ID",
        "VITE_SUPABASE_URL",
        "VITE_SUPABASE_ANON_KEY",
        "VITE_APP_URL"
      ],
      "outputs": [".vercel/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {},
    "clean": {},
    "//#format": {},
    "//#format:check": {},
    "test": {},
    "test:watch": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@maily-to/web#dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
